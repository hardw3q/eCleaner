<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_text_boost_header"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTotalCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/textview_header_clean"
            tools:text="75" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/textview_small_header_clean"
                tools:text="@string/percent_none" />

            <TextView
                android:id="@+id/suggested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/suggested"
                android:textColor="@color/white"
                android:textSize="@dimen/textview_small_header_clean" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTotalFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textview_small_header_clean"
        tools:text="@string/total_found" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.kikimore.ecleaner.adapter.AnimatedExpandableListView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/tvNoJunk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/no_junk"
            android:textColor="@color/grey_700"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/viewLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="7dp">

                <ImageView
                    android:id="@+id/imgFileApk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_icon_file"
                    android:contentDescription="@string/app_name"
                    android:padding="10dp"
                    android:src="@drawable/ic_android_white_24dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:text="@string/obsolete_apk"
                    android:textColor="@color/grey_700" />

                <com.kikimore.ecleaner.view.RotateLoading
                    android:id="@+id/rotateloadingApks"
                    android:layout_width="@dimen/view_rotate_image"
                    android:layout_height="@dimen/view_rotate_image"
                    app:loading_speed="7"
                    app:loading_width="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_icon_file"
                    android:contentDescription="@string/app_name"
                    android:padding="10dp"
                    android:src="@drawable/ic_layers_white_24dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:text="@string/system_cache"
                    android:textColor="@color/grey_700" />

                <com.kikimore.ecleaner.view.RotateLoading
                    android:id="@+id/rotateloadingCache"
                    android:layout_width="@dimen/view_rotate_image"
                    android:layout_height="@dimen/view_rotate_image"
                    app:loading_speed="7"
                    app:loading_width="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_icon_file"
                    android:contentDescription="@string/app_name"
                    android:padding="10dp"
                    android:src="@drawable/ic_file_download_white_24dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:text="@string/downloader_files"
                    android:textColor="@color/grey_700" />

                <com.kikimore.ecleaner.view.RotateLoading
                    android:id="@+id/rotateloadingDownload"
                    android:layout_width="@dimen/view_rotate_image"
                    android:layout_height="@dimen/view_rotate_image"
                    app:loading_speed="7"
                    app:loading_width="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_icon_file"
                    android:contentDescription="@string/app_name"
                    android:padding="10dp"
                    android:src="@drawable/ic_description_white_24dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:text="@string/large_files"
                    android:textColor="@color/grey_700" />

                <com.kikimore.ecleaner.view.RotateLoading
                    android:id="@+id/rotateloadingLargeFiles"
                    android:layout_width="@dimen/view_rotate_image"
                    android:layout_height="@dimen/view_rotate_image"
                    app:loading_speed="7"
                    app:loading_width="2dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_icon_file"
                    android:contentDescription="@string/app_name"
                    android:padding="10dp"
                    android:src="@drawable/ic_description_white_24dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:text="@string/application_data"
                    android:textColor="@color/grey_700" />

                <com.kikimore.ecleaner.view.RotateLoading
                    android:id="@+id/rotateloadingAppData"
                    android:layout_width="@dimen/view_rotate_image"
                    android:layout_height="@dimen/view_rotate_image"
                    app:loading_speed="7"
                    app:loading_width="2dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_icon_file"
                    android:contentDescription="@string/app_name"
                    android:padding="10dp"
                    android:src="@drawable/ic_description_white_24dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:text="@string/residual_files"
                    android:textColor="@color/grey_700" />

                <com.kikimore.ecleaner.view.RotateLoading
                    android:id="@+id/rotateloadingResidualData"
                    android:layout_width="@dimen/view_rotate_image"
                    android:layout_height="@dimen/view_rotate_image"
                    app:loading_speed="7"
                    app:loading_width="2dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_icon_file"
                    android:contentDescription="@string/app_name"
                    android:padding="10dp"
                    android:src="@drawable/ic_description_white_24dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:text="@string/application_cache"
                    android:textColor="@color/grey_700" />

                <com.kikimore.ecleaner.view.RotateLoading
                    android:id="@+id/rotateloadingAppCache"
                    android:layout_width="@dimen/view_rotate_image"
                    android:layout_height="@dimen/view_rotate_image"
                    app:loading_speed="7"
                    app:loading_width="2dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:layout_marginStart="20dip"
        android:layout_marginEnd="20dip"
        android:id="@+id/btnCleanUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        android:background="@drawable/bg_btn"
        android:text="@string/clean_up"
        android:textColor="@color/white" />
</LinearLayout>